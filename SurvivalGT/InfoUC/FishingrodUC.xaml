<UserControl x:Class="SurvivalGT.InfoUC.FishingrodUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SurvivalGT.InfoUC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="/WindowResources/InfoDictionary.xaml"/>
    </UserControl.Resources>

    <StackPanel>

        <local:ItemUC DataContext="{Binding Path=ItemViewModel}"/>

        <local:BreakableUC DataContext="{Binding Path=BreakableViewModel}"/>

        <local:RepairUC DataContext="{Binding Path=RepairViewModel}"/>

        <Button Content="Catch fish" Template="{StaticResource ButtonTemplate}" Command="{Binding CatchFishCommand}"/>

    </StackPanel>
</UserControl>
