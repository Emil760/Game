<UserControl x:Class="SurvivalGT.InfoUC.WeaponUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SurvivalGT.InfoUC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources> 
        <ResourceDictionary Source="/WindowResources/InfoDictionary.xaml"/>
    </UserControl.Resources>

    <StackPanel>
        <local:BreakableUC DataContext="{Binding Path=Loot}"/>

        <Border BorderBrush="CornflowerBlue" BorderThickness="3">
            <StackPanel>
                <ListView ItemsSource="{Binding CraftItem}" />
                <Button Name="repair_btn" Content="Repair" Visibility="{Binding RepairVisibility}" Command="{Binding RepairCommand}"/>
            </StackPanel>
        </Border>
    </StackPanel>

</UserControl>
