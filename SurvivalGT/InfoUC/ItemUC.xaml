<UserControl x:Class="SurvivalGT.InfoUC.ItemUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SurvivalGT.InfoUC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="/WindowResources/InfoDictionary.xaml"/>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="{Binding Path=Item.Name, Mode=OneWay, StringFormat=Name: {0}}"/>
        <TextBlock Text="{Binding Path=Item.Weight, Mode=OneWay, StringFormat=Weight: {0}}"/>
        <TextBlock Text="{Binding Path=Count, Mode=OneWay, StringFormat=Count: {0}}"/>
        <TextBlock>
            <TextBlock.Text>
                <MultiBinding Converter="{StaticResource  MultConvertor}" StringFormat="Full weight: {0}">
                    <Binding Path="Item.Weight"/>
                    <Binding Path="Count"/>
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
    </StackPanel>
</UserControl>
