<UserControl x:Class="SurvivalGT.InfoUC.BreakableUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SurvivalGT.InfoUC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <StackPanel>
        <local:ItemUC DataContext="{Binding RelativeSource={RelativeSource Self}}"></local:ItemUC>

        <TextBlock Text="{Binding Path=Loot.Item.Durability, StringFormat=Max durability: {0}}" />
        <TextBlock Text="{Binding Path=Loot.Item.CurrentDurability, StringFormat=Durability{0}}" />
    </StackPanel>
</UserControl>
