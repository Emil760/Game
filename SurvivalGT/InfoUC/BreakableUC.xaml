<UserControl x:Class="SurvivalGT.InfoUC.BreakableUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SurvivalGT.InfoUC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary Source="/WindowResources/InfoDictionary.xaml"/>
    </UserControl.Resources>

    <StackPanel>
        <local:ItemUC DataContext="{Binding Path=Loot}"/>

        <TextBlock>
            <Run Text="{Binding Path=Loot.Item.CurrentDurability, StringFormat=Durability: {0}}" ></Run>
            <Run> / </Run>
            <Run Text="{Binding Path=Loot.Item.Durability, Mode=OneWay}"></Run>
        </TextBlock>
    </StackPanel>
</UserControl>
